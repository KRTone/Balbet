@model Balbet.WEB.Models.UserViewModel

<div>
    @Html.LabelFor(model => model.Login)
    <p>
        @Html.EditorFor(model => model.Login)
        @Html.ValidationMessageFor(model => model.Login)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.Password)
    <p>
        @Html.EditorFor(model => model.Password)
        @Html.ValidationMessageFor(model => model.Password)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.FirstName)
    <p>
        @Html.EditorFor(model => model.FirstName)
        @Html.ValidationMessageFor(model => model.FirstName)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.LastName)
    <p>
        @Html.EditorFor(model => model.LastName)
        @Html.ValidationMessageFor(model => model.LastName)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.Sex)
    <p>
        @Html.DropDownListFor(model=>model.Sex, new List<SelectListItem>
        {
            new SelectListItem{ Text="Мужской", Value = "М"},
            new SelectListItem{ Text="Женский", Value = "Ж"}
        })
        @Html.ValidationMessageFor(model => model.Sex)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.Age)
    <p>
        @Html.EditorFor(model => model.Age)
        @Html.ValidationMessageFor(model => model.Age)
    </p>
</div>
<div>
    @Html.LabelFor(model => model.Passport)
    @Html.EditorFor(model => model.Passport)
</div>
