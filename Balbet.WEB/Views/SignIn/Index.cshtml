@model Balbet.WEB.Models.UserViewModel

@using (Html.BeginForm())
{
    if(Model!=null)
    {
        <div style="color:red">user does not exist</div>
    }
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="form-group">
            @Html.TextBoxFor(model => model.Login, new { placeholder = "Login" })
            @Html.ValidationMessageFor(model => model.Login)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Password, new { type = "password", placeholder = "Password" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Log In">
        <input class="btn btn-secondary" type="button" value="Back" onclick="location.href='@Url.Action("Index", "Home")'">
    </div>
}
